<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_left" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back_btn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/detail_theme_img"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="28dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/detail_theme_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/notosansmedium"
                    android:includeFontPadding="false"
                    android:text="넥스트에디션 강남점"
                    android:textColor="@color/light_gray_06"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/detail_theme_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:fontFamily="@font/notosansregular"
                    android:includeFontPadding="false"
                    android:text="세렌디피티(Serendipity)"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/detail_theme_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="⭐⭐⭐⭐"
                    android:layout_marginBottom="15dp"
                    android:textSize="17sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detail_theme_playtime_text"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="@font/notosansregular"
                        android:includeFontPadding="false"
                        android:text="플레이시간"
                        android:textColor="@color/light_gray_06"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/detail_theme_playtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosansmedium"
                        android:includeFontPadding="false"
                        android:text="70분"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detail_theme_genre_text"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="@font/notosansregular"
                        android:includeFontPadding="false"
                        android:text="장르"
                        android:textColor="@color/light_gray_06"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/detail_theme_genre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosansmedium"
                        android:includeFontPadding="false"
                        android:text="추리, 액션"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/detail_theme_people_text"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="@font/notosansregular"
                        android:includeFontPadding="false"
                        android:text="추천인원"
                        android:textColor="@color/light_gray_06"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosansmedium"
                        android:includeFontPadding="false"
                        android:text="2 ~ 5"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/light_gray_03"
                    android:layout_marginVertical="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이 스토어의 다른 테마"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/notosansmedium"
                    android:includeFontPadding="false"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/detail_store_theme_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_theme_horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비슷한 장르 테마들"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/notosansmedium"
                    android:includeFontPadding="false"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/detail_genre_theme_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_theme_horizontal"
                    android:orientation="horizontal"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_heart" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanssemibold"
                android:backgroundTint="@color/green"
                android:background="@drawable/round_rectange"
                android:text="예약하러 가기" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>